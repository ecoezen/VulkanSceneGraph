		},
		{
			"name": "windows-msvc-x64",
			"inherits": "test-base",
			"configurePreset": "windows-msvc-x64"
		},
		{
			"name": "windows-msvc-clang-arm64",
			"inherits": "test-base",
			"configurePreset": "windows-msvc-clang-arm64"
		},
		{
			"name": "windows-msvc-clang-x64",
			"inherits": "test-base",
			"configurePreset": "windows-msvc-clang-x64"
		}
	],
