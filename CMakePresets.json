{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 30,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "config-base",
			"hidden": true,
			"binaryDir": "${sourceDir}/build/${presetName}/build",
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
				"CMAKE_MODULE_PATH": "{sourceDir}/cmake;{sourceDir}/cmake/modules",
				"CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/$<CONFIG>/lib",
				"CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/$<CONFIG>/lib",
				"CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/$<CONFIG>/bin",
				"CMAKE_PDB_OUTPUT_DIRECTORY": "${sourceDir}/build/${presetName}/$<CONFIG>/pdb"
			}
		},
		{
			"name": "windows-base",
			"hidden": true,
			"inherits": "config-base",
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			},
			"cacheVariables": {
				"CMAKE_SYSTEM_NAME": "Windows",
				"CMAKE_VS_WINDOWS_TARGET_PLATFORM_VERSION_MAXIMUM": "10.0.22621.0",
				"CMAKE_SYSTEM_VERSION": "10.0.19041.0"
			}
		},
		{
			"name": "windows-vs-arm64",
			"displayName": "Windows Visual Studio 2022 (MSVC, ARM64)",
			"description": "Build using Visual Studio 2022 MSBuild system with MSVC compiler targeting ARM64 architecture (multi-config).",
			"inherits": "windows-base",
			"generator": "Visual Studio 17 2022",
			"architecture": "ARM64",
			"toolset": "v143",
			"cacheVariables": {
				"CMAKE_SYSTEM_PROCESSOR": "ARM64"
			}
		},
		{
			"name": "windows-vs-x64",
			"displayName": "Windows Visual Studio 2022 (MSVC, x64)",
			"description": "Build using Visual Studio 2022 MSBuild system with MSVC compiler targeting x64 architecture (multi-config).",
			"inherits": "windows-base",
			"generator": "Visual Studio 17 2022",
			"architecture": "x64",
			"toolset": "v143",
			"cacheVariables": {
				"CMAKE_SYSTEM_PROCESSOR": "AMD64"
			}
		},
		{
			"name": "windows-msvc",
			"inherits": "windows-base",
			"hidden": true,
			"displayName": "Windows-only configuration",
			"description": "This build is only available on Windows",
			"generator": "Ninja Multi-Config",
			"cacheVariables": {
				"CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/Windows.MSVC.toolchain.cmake",
				"CMAKE_VS_VERSION_PRERELEASE": "ON",
				"VS_EXPERIMENTAL_MODULE": "OFF",
				"VS_USE_SPECTRE_MITIGATION_ATLMFC_RUNTIME": "OFF",
				"VS_USE_SPECTRE_MITIGATION_RUNTIME": "OFF"
			}
		},
		{
			"name": "windows-msvc-arm64",
			"displayName": "Windows MSVC Ninja (arm64)",
			"description": "Build using Ninja Multi-Config with Microsoft Visual C++ (MSVC) compiler targeting ARM64 architecture. Fast local and CI builds (multi-config).",
			"inherits": "windows-msvc",
			"cacheVariables": {
				"CMAKE_SYSTEM_PROCESSOR": "ARM64"
			}
		},
		{
			"name": "windows-msvc-x64",
			"displayName": "Windows MSVC Ninja (x64)",
			"description": "Build using Ninja Multi-Config with Microsoft Visual C++ (MSVC) compiler targeting x64 architecture. Fast local and CI builds (multi-config).",
			"inherits": "windows-msvc",
			"cacheVariables": {
				"CMAKE_SYSTEM_PROCESSOR": "AMD64"
			}
		},
		{
			"name": "windows-clang",
			"inherits": "windows-base",
			"hidden": true,
			"displayName": "Windows-only configuration",
			"description": "This build is only available on Windows",
			"generator": "Ninja Multi-Config",
			"cacheVariables": {
				"CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/Windows.Clang.toolchain.cmake",
				"CMAKE_VS_VERSION_RANGE": "[16.0,18.0)",
				"CMAKE_VS_VERSION_PRERELEASE": "ON"
			}
		},
		{
			"name": "windows-clangcl",
			"inherits": "windows-clang",
			"hidden": true,
			"displayName": "Windows-only configuration",
			"description": "This build is only available on Windows",
			"cacheVariables": {
				"CMAKE_C_COMPILER_FRONTEND_VARIANT": "MSVC",
				"CMAKE_CXX_COMPILER_FRONTEND_VARIANT": "MSVC"
			}
		},
		{
			"name": "windows-msvc-clang-arm64",
			"displayName": "Windows ClangCL Ninja (arm64)",
			"description": "Build using Ninja with ClangCL frontend (clang-cl.exe) while linking against MSVC runtime libraries, targeting arm64 architecture.",
			"inherits": "windows-clangcl",
			"cacheVariables": {
				"CMAKE_SYSTEM_PROCESSOR": "ARM64",
				"CMAKE_C_COMPILER_TARGET": "aarch64-windows-msvc",
				"CMAKE_CXX_COMPILER_TARGET": "aarch64-windows-msvc"
			}
		},
		{
			"name": "windows-msvc-clang-x64",
			"displayName": "Windows ClangCL Ninja (x64)",
			"description": "Build using Ninja with ClangCL frontend (clang-cl.exe) while linking against MSVC runtime libraries, targeting x64 architecture.",
			"inherits": "windows-clangcl",
			"cacheVariables": {
				"CMAKE_SYSTEM_PROCESSOR": "AMD64",
				"CMAKE_C_COMPILER_TARGET": "x86_64-windows-msvc",
				"CMAKE_CXX_COMPILER_TARGET": "x86_64-windows-msvc"
			}
		}
	],
	"buildPresets": [
		{
			"name": "windows-vs-arm64",
			"configurePreset": "windows-vs-arm64"
		},
		{
			"name": "windows-vs-x64",
