		{
			"name": "windows-msvc-clang-x64-release",
			"configurePreset": "windows-msvc-clang-x64",
			"configuration": "Release"
		}
	],
	"testPresets": [
		{
			"name": "test-base",
			"hidden": true,
			"output": {
				"outputOnFailure": true
			}
		},
		{
			"name": "windows-vs-arm64",
